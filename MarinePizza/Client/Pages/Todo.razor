@page "/todo"

<h3>To-Do Items (@items.Count(todo => !todo.IsDone))</h3>

<ul>
    @foreach (var item in items)
    {
        <li>
            <input type="checkbox" @bind="item.IsDone" />
            <input @bind="item.Title" />
        </li>
    }
</ul>

<input placeholder="Something to do..." @bind="newTodo" />

<button @onclick="AddTodo">Add to-do item</button>

@code {
    private List<TodoItem> items = new();

    private string? newTodo;

    private void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo))
        {
            items.Add(new TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
}

